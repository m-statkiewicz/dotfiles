set clipboard+=unnamedplus

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

set noswapfile

set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=10000
set undoreload=10000

set number
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
